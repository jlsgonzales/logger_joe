{
    "name": "logger-joe",
    "displayName": "Logger Joe",
    "description": "VS Code Log Analyzer",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:logger-joe.helloWorld",
        "onCommand:logger-joe.highlightWord",
        "onCommand:logger-joe.rememberLine",
        "onCommand:logger-joe.grep"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "colors": [
			{
				"id": "loggerJoe.largeNumberBackground",
				"description": "Background decoration color for large numbers",
				"defaults": {
					"dark": "#FF000055",
					"light": "#FF000055",
					"highContrast": "#FF000055"
				}
			}
        ],
        "commands": [
            {
                "command": "logger-joe.helloWorld",
                "title": "Logger Joe: Parse File"
            },
            {
                "command": "logger-joe.rememberLine",
                "title": "Logger Joe: Remember This Line"
            },
            {
                "command": "logger-joe.forgetLine",
                "title": "Logger Joe: Forget This Line"
            },
            {
                "command": "logger-joe.grep",
                "title": "Logger Joe: Grep"
            },
            {
                "command": "logger-joe.nextRememberLine",
                "title": "Logger Joe: Go to Next Remembered Line"
            },
            {
                "command": "logger-joe.previousRememberLine",
                "title": "Logger Joe: Go to Previous Remembered Line"
            },
            {
                "command": "logger-joe.highlightWord",
                "title": "Logger Joe: Highlight Selected"
            },
            {
                "command": "logger-joe.unhighlightWord",
                "title": "Logger Joe: Unhighlight Selected"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.48.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "eslint": "^7.6.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    }
}
